{
  "compilerOptions": {
      "module": "commonjs",
      // "target": "es5",
      "allowJs": true,
      "checkJs": false,
      "jsx": "react-jsx",
      "outDir": "./build",
      "rootDir": "./lib",
      "removeComments": true,
      "noEmit": true,
      "pretty": true,
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
    //   "lib": [
    //     "es5", "es6", "dom", "dom.iterable"
    // ]
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ],
    "target": "es2015"
  },
  "include": [
      "./lib/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}